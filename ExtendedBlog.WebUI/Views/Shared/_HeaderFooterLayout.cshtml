<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="format-detection" content="telephone=no"/>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
		<div class="container">
			<div class="row">
                <div class="col-lg-12 col-md-12">
                    @Html.Action("AdminButtons", "Account")
                </div>
                
				<div class="logo-block col-lg-8  col-md-8">
					<div class="sitename">photovideos.ru</div>
					<h1 class="site-description">Фотографы и видеографы Санкт-Петербурга</h1>
				</div>
				<div class="phone-block col-lg-4 col-md-4">
					<a href="tel:+79313052551" class="phone-number">тел. +7 (923) 334 22 11</a>
					<a href="" class="a-btn right">Обратный звонок</a>
				</div>
				<!-- <div class="clearfix"></div> -->
			</div>
		</div>
	</header>
	<nav>
		<div class="container">
			<div class="row">
				<ul>
					<li><a href="#">Фотографы</a></li>
					<li><a href="#">Видеографы</a></li>
					<li><a href="#">Акции</a></li>
					<li><a href="#">Вакансии</a></li>
					<li><a href="#">О нас</a></li>
				</ul>		
			</div>
		</div>
	</nav>
    
    @RenderBody()


	<footer>
		<div class="container">
			<div class="row">
				<div class="line"></div>
				<div class="col-lg-6 col-md-6">
					<div class="for-clients">
						<p class="titleh2">Клиентам</p>
						<ul>
							<li>Фотографы</li>
							<li>Видеографы</li>
							<li>Акции</li>
							<li>Статьи</li>
							<li>О нас</li>
						</ul>
					</div>
				</div>
				<div class="col-lg-6 col-md-6">
					<div class="for-spec">
						<p class="titleh2">Специалистам</p>
						<ul>
							<li>Как попасть на сайт?</li>
							<li>Акции</li>
							<li>Цены</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
