<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="format-detection" content="telephone=no"/>
        <title>@ViewBag.Title</title>

        @Styles.Render("~/Content/themes/simple/jqueryuicustom/css/sunny")
        @Styles.Render("~/bundles/admin")
        @RenderSection("styles", required: false)
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>

        <section>
            <div class="container">
    	        <div class="row">
                    <div class="col-lg-12 col-md-12">
                        @Html.Action("AdminButtons", "Account")
                    </div>

                    <div class="manage">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </section>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/jqueryui")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqGrid")
        @Scripts.Render("~/Scripts/tiny_mce/js")
        <script src="@Url.Content("~/Scripts/admin.js")" type="text/javascript"></script>

        @RenderSection("scripts", required: false)
    </body>
</html>
