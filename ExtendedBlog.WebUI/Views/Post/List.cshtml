@using ExtendedBlog.WebUI.Extension
@model ExtendedBlog.WebUI.Models.PostsListViewModel

@{
    ViewBag.Title = "Статьи - Санкт-Петерург";
}

<section>
	<div class="container">
		<div class="row">
            <h1>Все статьи</h1>
            <div class="col-lg-9 col-md-9">
                @if (Model.Posts.Count > 0)
                {
                    foreach (var post in Model.Posts)
                    {
		                @Html.Partial("_PostTemplate", post) 
                    }
                }
                else
                {
                    <p>Извините, статьи еще не добавлены!</p>
                }
            </div>

            <div class="col-lg-3 col-md-3">
	            <div class="categories">
		            <h2>Категории</h2>
	            </div>
            </div>
        </div>
    </div>
</section>

<section>
	<div class="container">
		<div class="row">
			<div class="blog-pager">
                @Html.PageLinks(Model.PageInfo, x => Url.Action("List", new { pageNumber = x })) 
			</div>
		</div>
	</div>
</section>



